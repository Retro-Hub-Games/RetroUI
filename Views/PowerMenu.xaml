<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RetroHub.Views.PowerMenu"
             Title="Power Options"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#80000000">

    <Grid VerticalOptions="Center" 
          HorizontalOptions="Center">
        <Frame BackgroundColor="#1E1E1E"
               CornerRadius="15"
               Padding="20"
               MinimumWidthRequest="300">
            <VerticalStackLayout Spacing="15">
                <Label Text="Power Options"
                       TextColor="White"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>

                <Frame x:Name="ShutdownButton"
                       BackgroundColor="#2A2A2A"
                       CornerRadius="10"
                       Padding="15">
                    <Label Text="Shutdown"
                           TextColor="White"
                           FontSize="18"
                           HorizontalOptions="Center"/>
                </Frame>

                <Frame x:Name="RestartButton"
                       BackgroundColor="#2A2A2A"
                       CornerRadius="10"
                       Padding="15">
                    <Label Text="Restart"
                           TextColor="White"
                           FontSize="18"
                           HorizontalOptions="Center"/>
                </Frame>

                <Frame x:Name="ExitButton"
                       BackgroundColor="#2A2A2A"
                       CornerRadius="10"
                       Padding="15">
                    <Label Text="Exit"
                           TextColor="White"
                           FontSize="18"
                           HorizontalOptions="Center"/>
                </Frame>

                <Frame x:Name="CancelButton"
                       BackgroundColor="#2A2A2A"
                       CornerRadius="10"
                       Padding="15">
                    <Label Text="Cancel"
                           TextColor="White"
                           FontSize="18"
                           HorizontalOptions="Center"/>
                </Frame>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
