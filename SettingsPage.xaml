<Page x:Class="RetroUI.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Settings"
      Background="#FF1A1A1A">

    <Page.Resources>
        <DropShadowEffect x:Key="MaterialShadow" 
                         BlurRadius="15" 
                         Direction="270" 
                         ShadowDepth="2" 
                         Color="#FF222222"/>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InvisibleScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>

                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                     Grid.Column="1"
                                     Grid.Row="0"
                                     Orientation="Vertical"
                                     ViewportSize="{TemplateBinding ViewportHeight}"
                                     Maximum="{TemplateBinding ScrollableHeight}"
                                     Value="{TemplateBinding VerticalOffset}"
                                     Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>

                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                                     Grid.Column="0"
                                     Grid.Row="1"
                                     Orientation="Horizontal"
                                     ViewportSize="{TemplateBinding ViewportWidth}"
                                     Maximum="{TemplateBinding ScrollableWidth}"
                                     Value="{TemplateBinding HorizontalOffset}"
                                     Visibility="Collapsed"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#FF161616" 
                Effect="{StaticResource MaterialShadow}">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="BackButton_Click">
                    <Path Data="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"
                          Fill="White" 
                          Width="24" 
                          Height="24"/>
                </Button>

                <TextBlock Text="Settings" 
                         Grid.Column="1"
                         Foreground="White"
                         FontSize="24"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" 
                      Margin="20"
                      Style="{StaticResource InvisibleScrollViewer}">
            <StackPanel>
                <!-- Startup Settings -->
                <Border Background="#FF222222" 
                        CornerRadius="10" 
                        Margin="0,0,0,20"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Startup" 
                                 Foreground="White"
                                 FontSize="20"
                                 FontWeight="Bold"
                                 Margin="0,0,0,10"/>
                        
                        <CheckBox x:Name="AutoStartCheckbox"
                                Content="Launch RetroHub on system startup"
                                Foreground="White"
                                Margin="0,5"
                                Checked="AutoStartCheckbox_Checked"
                                Unchecked="AutoStartCheckbox_Unchecked"/>
                    </StackPanel>
                </Border>

                <!-- Theme Settings -->
                <Border Background="#FF222222" 
                        CornerRadius="10" 
                        Margin="0,0,0,20"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Appearance" 
                                 Foreground="White"
                                 FontSize="20"
                                 FontWeight="Bold"
                                 Margin="0,0,0,10"/>
                        
                        <ComboBox x:Name="ThemeComboBox"
                                 Margin="0,5"
                                 SelectionChanged="ThemeComboBox_SelectionChanged">
                            <ComboBoxItem Content="Dark Theme"/>
                            <ComboBoxItem Content="Light Theme"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- ROM Settings -->
                <Border Background="#FF222222" 
                        CornerRadius="10" 
                        Margin="0,0,0,20"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="ROM Settings" 
                                  Foreground="White"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,5">
                            <TextBox x:Name="RomFolderPath"
                                     Width="350"
                                     Height="30"
                                     IsReadOnly="True"
                                     Background="#FF333333"
                                     Foreground="White"
                                     VerticalContentAlignment="Center"
                                     Padding="10,0"/>
                            <Button Content="Browse" 
                                    Margin="10,0,0,0"
                                    Width="80"
                                    Height="30"
                                    Click="BrowseRomFolder_Click"/>
                        </StackPanel>

                        <Button Content="Scan ROMs" 
                                Margin="0,10,0,0"
                                Width="120"
                                Height="35"
                                HorizontalAlignment="Left"
                                Click="ScanRoms_Click"/>
                                
                        <TextBlock x:Name="ScanStatus"
                                   Foreground="Gray"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <Border Background="#FF222222" 
                        CornerRadius="10" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="About" 
                                 Foreground="White"
                                 FontSize="20"
                                 FontWeight="Bold"
                                 Margin="0,0,0,10"/>
                        
                        <TextBlock Text="RetroHub Version 1.0"
                                 Foreground="White"
                                 Margin="0,5"/>
                        
                        <TextBlock Text="Â© 2024 RetroHub"
                                 Foreground="Gray"
                                 Margin="0,5"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 